<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" version="5.0" group="content" method="upgrade">
    <name>Content - Automatic Meta Description</name>
    <version>1.2.1</version>
    <creationDate>6 November 2025</creationDate>
	<author>Angus Fox</author>
	<copyright>(C) 2025 Multizone Limited. All rights reserved.</copyright>
	<authorEmail>admin@multizone.co.uk</authorEmail>
	<authorUrl>https://www.multizone.co.uk</authorUrl>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>PLG_CONTENT_AUTOMETA_XML_DESCRIPTION</description>
    <namespace path="src">Ezone\Plugin\Content\AutoMeta</namespace>
    <files>
        <filename plugin="autometa">autometa.php</filename>
        <folder>src</folder>
        <folder>language</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="max_length"
                    type="number"
                    label="Maximum Length"
                    description="Maximum length of the meta description (Google typically shows 150-160 characters)"
                    default="160"
                    min="50"
                    max="320"
                    step="10"
                />
                <field
                    name="separator"
                    type="text"
                    label="Separator"
                    description="Separator between title and content summary"
                    default=" - "
                    size="10"
                />
                <field
                    name="overwrite_existing"
                    type="radio"
                    label="Overwrite Existing"
                    description="Overwrite meta descriptions that already exist"
                    default="0"
                    class="btn-group"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field
                    name="use_title"
                    type="radio"
                    label="Include Title"
                    description="Include the article title in the meta description"
                    default="1"
                    class="btn-group"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field
                    name="use_content"
                    type="radio"
                    label="Include Content"
                    description="Include content from the article intro text"
                    default="1"
                    class="btn-group"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
                <field
                    name="debug_mode"
                    type="radio"
                    label="Debug Mode"
                    description="Show debug messages when saving articles (useful for troubleshooting)"
                    default="0"
                    class="btn-group"
                >
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
    <updateservers>
        <server type="extension" name="Automatic Meta Description - EZONE">https://www.multizone.co.uk/updates/autometa.xml</server>
    </updateservers>
    <changelogurl>https://www.multizone.co.uk/updates/autometa-changelog.xml</changelogurl>
</extension>
